.grid-home {
    padding: 0.5rem;
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
    grid-template-rows: auto auto auto;
    grid-template-areas: "about" "events" "contact";
}

.grid-info {
    padding: 0.5rem;
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    grid-template-areas: "membership" "board" "contact" "documents";
}

.grid-events {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    grid-template-areas: "new" "planned" "old";

    padding: 1rem;
    gap: 2rem;
}

.grid-col {
    padding: 0.5rem;
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
}

@media (min-width: 992px) {
    .grid-home {
        padding: 1rem;
        gap: 2rem;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto auto;
        grid-template-areas: "about about" "events contact";
    }

    .grid-info {
        padding: 1rem;
        gap: 2rem;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto;
        grid-template-areas: "membership membership" "board board" "contact documents";
    }
    .grid-col {
        padding: 1rem;
        gap: 2rem;
    }
    .grid-events {
        grid-template-columns: 3fr 1fr;
        grid-template-rows: auto;
        grid-template-areas: "new planned" "old old";

        padding: 1rem;
        gap: 2rem;
    }
}
